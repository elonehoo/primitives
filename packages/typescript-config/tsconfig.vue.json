{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* Проекты */
    "incremental": true,
    "composite": true,

    "jsx": "preserve",
    "jsxImportSource": "vue",
    /* Язык и среда */
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],

    /* Модули */
    "rootDir": "src",
    /* Генерация */
    "declaration": true,
    "declarationMap": true
  }
}
